<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lumière centrale en haut (blanc doré diffus) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="120%"
                android:centerX="50%"
                android:centerY="20%"
                android:startColor="#FFF9E6"
                android:centerColor="#FFE4A8"
                android:endColor="#E8B84A"
                android:angle="270" />
        </shape>
    </item>
    <!-- Nuages dorés / ambre -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#FFF5D6"
                android:centerColor="#F5C96B"
                android:endColor="#C9952E"
                android:centerY="0.4" />
        </shape>
    </item>
    <!-- Base plus sombre (ambre / orange doré) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#00000000"
                android:endColor="#A67C2E"
                android:centerY="0.7" />
        </shape>
    </item>
</layer-list>
